<Alloy>
  <View class="cell">
    <View class="details" layout="vertical">
      <Label id="active" class="activeTitle"/>
      <Label id="alias"/>
      <Label id="pubKey" class="pubKeyTitle"/>
    </View>
    <View class="amounts" layout="vertical">
      <Label id="localAmount" class="localAmountTitle"/>
      <Label id="remoteAmount" class="remoteAmountTitle"/>
    </View>
    <View id="buttonView">
      <ActivityIndicator id="loadingSpinner"></ActivityIndicator>
      <Label id="closeChannelButton" onClick="closeChannel">L('label_close')</Label>
    </View>
  </View>
</Alloy>
