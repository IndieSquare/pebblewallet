<Alloy>

	<View class="darkView" id="darkView" onClick="openCloseMenu"/>
	<View class="mainView" id="mainView">
		<View class="modesView" id="modesView">

			<View class="aModeView" id="payButton" onClick="lnPay">
				<View class="aModeLeft">
					<View class="aModeShadow"></View>
					<View class="aModeInnerView" id="lightningInnerView">
						<Label class="innerLabel">L('pay_option')</Label>
					</View>
				</View>
				<View class="aModeIconView">
					<View class="aModeIconShadowView"></View>
					<ImageView class="modeImage" image="/images/sendButtonLN.png"/>
				</View>
			</View>

			<View class="aModeView" id="receivButton" onClick="loadReceive">
				<View class="aModeLeft">
					<View class="aModeShadow"></View>
					<View class="aModeInnerView" id="lightningInnerView">
						<Label class="innerLabel">L('request_option')</Label>
					</View>
				</View>
				<View class="aModeIconView">
					<View class="aModeIconShadowView"></View>
					<ImageView class="modeImage" image="/images/invoiceButtonLN.png"/>
				</View>
			</View>

			<View class="aModeView" onClick="goToChannelsfunds">
				<View class="aModeLeft">
					<View class="aModeShadow"></View>
					<View class="aModeInnerView" id="lightningInnerView">
						<Label class="innerLabel">L('channels_funds_option')</Label>
					</View>
				</View>
				<View class="aModeIconView">
					<View class="aModeIconShadowView"></View>
					<ImageView class="modeImage" image="/images/channelsButtonLN.png"/>
				</View>
			</View>

			<View class="aModeView" id="discoverMode" onClick="loadDiscover">
				<View class="aModeLeft">
					<View class="aModeShadow"></View>
					<View class="aModeInnerView" id="lightningInnerView">
						<Label class="innerLabel" id="lappsBrowserTitle">L('lapp_browser_option')</Label>
					</View>
				</View>
				<View class="aModeIconView">
					<View class="aModeIconShadowView"></View>
					<ImageView class="modeImage" image="/images/lightningIcon.png"/>
				</View>
			</View>

			<!--
			<View class="aModeView" id="fullNodeMode" onClick="openFullNode" platform="android">
				<View class="aModeLeft">
					<View class="aModeShadow"></View>
					<View class="aModeInnerView" id="lightningInnerView">
						<Label class="innerLabel" id="lappsBrowserTitle">L('full_node')</Label>
					</View>
				</View>
				<View class="aModeIconView">
					<View class="aModeIconShadowView"></View>
					<ImageView class="modeImage" image="/images/fullNodeIconSmall.png"/>
				</View>
			</View>-->

		</View>

		<View class="othersView" id="othersView">

			<View id="settingsIcon" visible="true" onClick="showSettings">
				<View class="aModeIconShadowView"></View>
				<ImageView class="modeImage" image="/images/settingsIcon.png"/>
			</View>

			<View  id="scanNormalButton" onClick="scanNormal">
				<View class="aModeIconShadowView"></View>
				<ImageView class="modeImage" image="/images/qrScanLink.png"/>

			</View>

		</View>

	</View>

	<TableView class="bookmarkList" id="bookmarkList"/>

	<View class="buttonView" id="menuButton" onClick="openCloseMenu">

		<ImageView class="buttonImage" id="buttonImage"/>

	</View>

	

</Alloy>
