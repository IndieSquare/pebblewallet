<Alloy>
	<Window id="win">
		<View class="transparent">
			<View class="tifill background" id="background"></View>
			<View class="tifill mainView" id="mainView">
			<ImageView id="pattern" image="/images/pattern.png"/>
			 <ImageView class="overlay"/>
			 <View class="outer">
					<View class="amounts">
						   
						<View class="tisize pull-bottom" layout="vertical">
							<View class="tisize">
								<View class="tisize amountView" id="amountView" layout="horizontal">
									<TextField class="amount" id="amount"  onFocus="selectedCrypto" onChange="updateValues"><KeyboardToolbar platform="ios">
								<Toolbar>
									<Items>
										<Button title="Done" onClick="hideKeyboard"/>
									</Items>
								</Toolbar>
							</KeyboardToolbar></TextField>
									<Label class="amountBTC" id="amountBTC"></Label>
								</View>

								<View class="tisize fiatView" id="fiatView" layout="horizontal">

							<Label class="fiatSymbol" id="fiatSymbol"/> 
								<TextField class="fiat" id="fiat" onFocus="selectedFiat" onChange="updateValues"><KeyboardToolbar platform="ios">
								<Toolbar>
									<Items>
										<Button title="Done" onClick="hideKeyboard"/>
									</Items>
								</Toolbar>
							</KeyboardToolbar></TextField>

							</View>
							</View>
						</View>
						 
					</View>
					 <TextField class="memo" id="memo"/> 
					<View class="seperator1"/>


					 		<View class="expiryOuter">
									<Label id="expiryDescription">L('expiry_description')</Label>
									<View id="expiryControls">
										<Label class="plusminus" onTouchstart="minusExpiry">-</Label>
										<Label id="time"></Label>
										<Label class="plusminus" onTouchstart="addExpiry">+</Label>
									</View>

									</View>
								 


 
								<Button id="generateLabel" onClick="pressedRequest"></Button>
						 
					 
				 </View>
				 <Label class="size15 black pull-left pull-bottom" id="gobackButton" onClick="close">L("label_goback")</Label>
						
			</View>
			<View id="blockingView"/>
		</View>
	</Window>
</Alloy>
